<?xml version="1.0"?>
<configuration>

  <!-- Quan trọng nhất: Trỏ warehouse về MinIO -->
  <property>
    <name>hive.metastore.warehouse.dir</name>
    <value>s3a://datn/warehouse</value>
  </property>

  <!-- URI cho metastore -->
  <property>
    <name>metastore.thrift.uris</name>
    <value>thrift://hive-metastore:9083</value>
  </property>

  <!-- Kết nối database metastore -->
  <property>
    <name>javax.jdo.option.ConnectionURL</name>
    <value>jdbc:mysql://mariadb:3306/metastore_db</value>
  </property>

  <property>
    <name>javax.jdo.option.ConnectionDriverName</name>
    <value>com.mysql.cj.jdbc.Driver</value>
  </property>

  <property>
    <name>javax.jdo.option.ConnectionUserName</name>
    <value>minioadmin</value>
  </property>

  <property>
    <name>javax.jdo.option.ConnectionPassword</name>
    <value>minioadmin</value>
  </property>

  <!-- Có thể thêm để xử lý file S3 -->
  <property>
    <name>hive.metastore.fs.handler.class</name>
    <value>org.apache.hadoop.hive.metastore.HiveMetaStoreFsImpl</value>
  </property>

</configuration>
